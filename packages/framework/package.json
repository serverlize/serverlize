{
  "name": "@serverlize/framework",
  "description": "Serverlize Framework package",
  "version": "1.0.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Serverlize",
    "url": "https://github.com/serverlize"
  },
  "contributors": [
    "Hassan Khan <hassan.khan@endemolshine.com>",
    "Caina Leao <caina.leao@endemolshine.com>"
  ],
  "homepage": "https://serverlize.github.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/EndemolShineGroup/serverlize.git"
  },
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.3.0"
  },
  "scripts": {
    "precommit": "$(yarn bin)/lint-staged",
    "lint": "tslint -p tsconfig.json -t codeFrame 'src/**/*.ts' -e 'src/**/*.spec.ts'",
    "prebuild": "rimraf dist",
    "build:tsc": "tsc --module commonjs",
    "build:rollup": "rollup -c",
    "build:docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "build": "yarn build:tsc && yarn build:rollup && yarn build:docs",
    "start": "rollup -c -w",
    "test": "jest",
    "test:prod": "yarn lint && yarn test --coverage --no-cache"
  },
  "dependencies": {
    "aws-sdk": "^2.302.0",
    "lodash": "^4.17.5",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/lodash": "^4.14.106",
    "@types/node": "^10.5.2",
    "jest": "^23.0.0",
    "lint-staged": "^7.2.0",
    "npm-package-json-lint": "^3.1.0",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.2",
    "tslint": "^5.9.1",
    "tslint-config-esg": "github:EndemolShineGroup/tslint-config-esg",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  }
}
