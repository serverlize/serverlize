{
  "name": "serverlize",
  "version": "1.0.0",
  "description": "Serverlize - Supercharge your Serverless development experience!",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Endemol Shine Group Technology",
    "url": "https://github.com/EndemolShineGroup"
  },
  "contributors": [
    "GitHub (https://github.com/serverlize/serverlize/graphs/contributors)"
  ],
  "homepage": "https://github.com/serverlize/serverlize",
  "repository": {
    "type": "git",
    "url": "https://github.com/serverlize/serverlize.git"
  },
  "engines": {
    "node": ">=6.10.0",
    "yarn": ">=1.3.0"
  },
  "scripts": {
    "precommit": "lerna run --concurrency 1 --stream precommit",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "commit": "$(yarn bin)/git-cz",
    "test": "lerna run --concurrency 1 --stream test"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2",
    "typescript-workspace-plugin": "^1.0.5"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/tslint",
      "**/tslint-config-esg",
      "**/tslint-config-prettier",
      "**/tslint-eslint-rules"
    ]
  },
  "workspace-sources": {
    "@serverlize/*": [
      "packages/*/src"
    ]
  }
}
